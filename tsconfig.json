{
  "compilerOptions": {
    "target": "ES2019",
    "declaration": true,
    "declarationMap": true,
    // "outDir": "dist",
    "baseUrl": ".",
    "jsx": "preserve",
    "moduleResolution": "Node",
    "lib": ["ES2015", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "isolatedModules": true,
    "paths": {
      "nomimono": ["src"],
      "ui": ["src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
